@import 'lib/reset'

body {
  font-family: Avenir, Helvetica, sans-serif
  color: #1b1b1b
  font-size: 125%
  line-height: 1.4
  -webkit-font-smoothing: antialiased

  background-color: #f2f2f2
}

.application {
  max-width: 720px
  margin: auto
  background-color: white
  box-shadow: 0px 0px 3px 0px rgba(0,0,0,0.33)
}

@media(max-device-width: 400px) {
  body {
    font-size: 100%
  }
}
