.poster-cover {
  position: relative
  overflow: hidden
}

.poster-cover::after {
  content: ''
  display: block
  padding-bottom: 115%
}

.poster-text {
  position: absolute
  width: 63%
  left: 10.5%
  top: 50%
  transform: translateY(-50%)
}

.poster-text svg {
  width: 100%
  height: 100%
}

.poster-image {
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%
  background-size: cover
  background-position: center top
}

.poster-links {
  display: flex
  flex-wrap: wrap
}

.poster-link {
  width: 50%
  padding: 1em 0 .93em
  color: rgba(255, 255, 255, 0.95)
  font-weight: 600
  letter-spacing: .4px
  text-transform: uppercase
  text-align: center
  cursor: pointer
}

@media(max-device-width: 300px), (max-width: 450px) {
  .poster-link {
    font-size: .8em
  }
}

@media(min-aspect-ratio: 10 / 12) {
  .poster::after {
    padding-bottom: 70%
  }

  .poster-text {
    width: 50%
    height: 70%
    left: 15%
  }

  .poster-image {
    background-position: center 40%
    background-size: cover
  }
}
