.main-nav,
.lineup {
  display: flex
  flex-wrap: wrap
}

.main-nav-link,
.lineup-link {
  font-weight: 600
  letter-spacing: .4px
  text-transform: uppercase
  text-align: center
  cursor: pointer
}

.main-nav-link {
  width: 50%
  padding: 1em 0 .93em
  color: rgba(255, 255, 255, 0.95)

  &.primary {
    background-color: #1b1b1b
  }

  &.secondary {
    background-color: #202020
  }

  &.tertiary {
    width: 100%
    padding: 2em 0
    background-color: #242424
  }
}

.lineup-link {
  width: 100%
  padding: 2em 0
  background: linear-gradient(180deg, #E5E5E5, #E5E5E5 50%, transparent 50%) bottom left  / 100% 1px no-repeat
}

.lineup-link:last-child {
  background: none
}
