@import 'lib/retinaBorder'
@import 'lib/easings'

.lineup-header {
  position: relative
}

.lineup-header .back-button {
  position: absolute
  top: 50%
  left: 1.6em
  transform: translateY(-50%)

  height: 1em
  width: 1.4em
  text-indent: -100%
  overflow: hidden
  background: url('assets/back-button.svg') no-repeat
  background-size: contain
}

.favorites-filter-toggle {
    position: absolute
    top: 50%
    right: 1em
    transform: translateY(-50%)
    padding: .4em .7em .3em
    cursor: pointer
    border: 1px solid #E5E5E5
    border-radius: 3px
}

.favorites-filter-toggle.is-toggled {
  border: 1px solid black
  background-color: #121212
  color: rgba(255, 255, 255, .95)
}

.lineup-heading {
  font-weight: 600
  text-transform: uppercase
  text-align: center
  letter-spacing: .4px
  padding: 1.4em 0 1.27em
}

.hour-header {
  background-color: #121212
  text-align: center
  font-weight: 600
  padding: .7em 0 .6em
  color: rgba(255, 255, 255, .95)
}
