@import 'lib/retinaBorder'
@import 'lib/easings'

.artist-header {
  position: relative
  color: rgba(255,255,255, .95)
  cursor: pointer
  padding-bottom: 50%
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
  -webkit-focus-ring-color:  rgba(0, 0, 0, 0)
  user-select: none
  overflow: hidden
  background-color: #1b1b1b
}


.artist-header::after {
  content: ''
  position: absolute
  left: 0
  right: 0
  top: 0
  height: 1px
  retinaBorder(top: black)
}

.artist-header .close-button {
  position: absolute

  background-image: url('assets/pull-down-icon.svg')
  background-repeat: no-repeat
  background-size: contain
  width: 22px
  height: 14px
  left: 1.5em
  top: 1.3em
  transition: opacity .3s ease-out-cubic
}

.not-open.artist .close-button {
  opacity: 0
}

.artist-name {
  position: absolute
  bottom: .6em
  left: 0.75em
  right: 0.75em
  font-size: 2em
  font-weight: 500
  letter-spacing: 0.25px
  transition: .4s ease-out-cubic
}

.artist-header .sub-title {
  position: absolute
  font-size: 1em
  bottom: 1.3em
  left: 1.5em
  right: 1.5em
  transition: .4s ease-out-cubic
}

.artist-name,
.artist-header .context-venue {
  text-overflow: ellipsis
  white-space: nowrap
  overflow: hidden
}

.artist-header .sub-title::before {
  content: ''
  display: inline-block
  height: 0.8em
  width: 0.6em
  margin: 0 .4em -0.05em .1em
  background-size: contain
  background-position: center
  background-repeat: no-repeat
}

.artist-header .context-venue::before {
  background-image: url('assets/location-icon.svg')
}

.artist-header .preview-notice::before {
  width: .8em
  margin-bottom: -.08em
  background-image: url('assets/play-icon.svg')
}

.open.show-preview-notice .artist-name {
  transform: translate3d(0, .6em, 0)
}

.open.show-preview-notice .preview-notice {
  opacity: 0
  transform: translate3d(0, 1.2em, 0)
}

.preview-notice {
  display: none
}

.show-preview-notice .preview-notice {
  display: block
}

.artist-header .favorite-star {
  position: absolute
  right: 1.5em
  bottom 2.2em
  width: 1em
  height: 1em
  background-color: blue
  background: url('assets/white-favorite-icon.svg') no-repeat
  background-size: contain
  opacity: 0
  transform: scale(0.7)

  transition: .4s ease-out-expo
}

.is-favorite .favorite-star {
  opacity: 1
  transform: none
}

.show-preview-notice .favorite-star,
.has-venue .favorite-star {
  bottom: 1.9em
}

.show-preview-notice .artist-name,
.has-venue .artist-name {
  bottom: 1.2em
}


.artist-image {
  position: absolute
  left: 0
  right: 0
  bottom: 0
  top: 0
  background-size: cover
  background-position: center 25%
}

.artist-image::after {
  content: ''
  display: block
  width: 100%
  height: 100%
  background-image: linear-gradient(-167deg, rgba(22, 2, 17, 0) 20%, rgba(22, 2, 17, 0.6) 100%)
}

@media(max-device-width: 400px), (max-width: 600px) {
  .artist-header {
    font-size: .9em
  }
}

.artist-image {
  transition: opacity .3s ease-out-cubic
}

.info-overlay {
  transition: opacity .3s ease-out-cubic
}

.is-previewing {
  .artist-image {
    opacity: .3
  }
  .info-overlay {
    opacity: 0
  }
}

.preview-overlay {
  position: absolute
  width: 80%
  top: 50%
  left: 10%
  transform: translateY(-50%)
  text-align: center
}

.preview-overlay .track-artist {
  font-size: 2em
}
