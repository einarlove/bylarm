@import 'lib/retinaBorder'

.artist-header {
  position: relative
  color: rgba(255,255,255, .95)
  cursor: pointer
}

.artist-header .close-button {
  position: absolute

  background-image: url('assets/pull-down-icon.svg')
  background-repeat: no-repeat
  background-size: contain
  width: 22px
  height: 14px
  left: 1.5em
  top: 1em
}

.artist-name {
  position: absolute
  bottom: .6em
  left: 0.75em
  right: 0.75em
  font-size: 2em
  font-weight: 500
  letter-spacing: 0.25px
}

.artist-image {
  position: absolute
  left: 0
  right: 0
  bottom: 0
  top: 0
  background-size: cover
  background-position: center 25%
}

.artist-image::after {
  content: ''
  display: block
  width: 100%
  height: 100%
  background-image: linear-gradient(-167deg, rgba(22, 2, 17, 0) 20%, rgba(22, 2, 17, 0.6) 100%)
}

.artist-top-links {
  display: flex
}

.artist-top-link {
  position: relative
  width: 50%
  padding: 1em 0 .93em
  font-weight: 500
  font-size: 0.9em
  text-indent: 3.8em
}

.artist-top-link::before {
  content: ''
  position: absolute
  left: 1.4em
  width: 1.68em
  height: 1.25em
  top: 50%
  transform: translateY(-50%)
  background-size: contain
  background-repeat: no-repeat
  background-position: center
}

.artist-top-link.spotify {
  background-color: #7AB800
  color: rgba(255,255,255, .95)

  &::before {
    background-image url('assets/spotify-logo.svg')
  }
}

.artist-top-link.favorite {
  retinaBorder(bottom: #bebebe)

  &::before {
    background-image url('assets/favorite-icon.svg')
  }
}

.show-item {
  display: block
  padding: 2em 1.5em
  retinaBorder(bottom: #bebebe)
}

.show-venue {
  font-weight: 600
}

.maps-reminder {
  margin-top: .1em
  font-size: .8em
  color: #646464
}

.artist-biography {
  padding: 4em 1.5em
}

.artist-biography h1 {
  font-size: 1.4em
  font-weight: 600
}

.artist-biography h2 {
  color: #676767
  margin: -.3em 0 .5em
}

.artist-biography p {
  margin-bottom: 1.5em
}
